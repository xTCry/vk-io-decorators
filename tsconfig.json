{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "lib": [
            "es2018"
        ],
        "baseUrl": "./src",
        "rootDir": "./",
        "outDir": "build/node",
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "removeComments": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*",
        "./sample"
    ],
    "exclude": [
        "node_modules",
        "./build",
        "test/**"
    ]
}